<div class="container">

    <div id="cart-items-container"></div>
        
</div>

<!-- Loader HTML -->
<div id="loader" class="loader-overlay">
    <div class="loader-circle"></div>
</div>

<script>
    require(['jquery'], function($) {
        function removeFromCart(itemId) {
            $('#loader').css('display','flex');
            $.ajax({
                url: '<?= $block->getUrl('try-at-home/index/remove') ?>',
                type: 'POST',
                data: {item_id: itemId},
                success: function(response) {
                    if (response.success) {
                        $('.cardremove').filter(function() {
                            return $(this).data('item-id') == itemId;
                        }).remove();  // Remove the product-card element with the specific data-item-id
                       window.location.reload();
                    } else {
                        alert('Failed to remove item from cart: ' + response.error);
                    }
                }
            });
        }
    
        // Call removeFromCart() when your button is clicked
        $(document).on('click','.remove-from-cart', function() {
            var itemId = $(this).data('item-id');
            removeFromCart(itemId);
        });

        function setCart() {
            $('#loader').css('display','flex');
            $.ajax({
                url: '<?= $block->getUrl('try-at-home/index/setcart') ?>',
                type: 'POST',
                dataType: 'json',
                showLoader: true, // Use Magento's loader
                success: function(response) {
                    console.log('Cart Items:', response.items);
                    var html = '';
                    if (response.items.length > 0) {
                        html += '<div class="row">' ;
                        html += '<div class="col-md-8">' ;
                        response.items.forEach(function(data) {
                            html +=  '<div class="row mt-2 cardremove" data-item-id="' + data.id + '">'+
                                    '<div class="col-md-12">' +
                                        '<div class="product-card ">' +
                                            '<img src="' + data.image_url + '" alt="Product Image" class="product-image">' +
                                            '<div class="product-details">' +
                                                '<div class="product-title">' + data.name + '</div>' +
                                                '<div>' +
                                                    '<span class="product-price">$ ' + Number(data.price).toFixed(2) + '</span>' +
                                                '</div>' +
                                                '<div class="free-trial">FREE TRIAL</div>' +
                                            '</div>' +
                                            '<div class="close-button remove-from-cart" data-item-id="' + data.id + '">&times;</div>' +
                                        '</div>' +
                                    '</div>'+
                                '</div>'; 
                                
                        });
                        html += '</div>';
                        html += `
                            <div class="col-md-4">
                                <div class="appointment-section">
                                    <div class="help-text">
                                        <span>Need help with designs or appointment?</span>
                                        <br>
                                        <span>Call us if you have any questions or need clarification</span>
                                    </div>
                                    <div class="location-text">
                                        <span>Trial Location at ${localStorage.getItem('pincode')}</span>
                                        <a href="#" class="change-pincode">Change Pincode</a>
                                    </div>
                                    <div class="cost-details">
                                        <div class="free-trial-cost">Free Trial</div>
                                        <div class="service-charge">Service Charge: <span class="cost-amount">Free</span></div>
                                        <div class="total-cost">Total Cost: <span class="cost-amount">â‚¹0</span></div>
                                    </div>
                                    <a href="<?= $block->getUrl('try-at-home/index/checkout') ?>" class="btn btn-primary book-appointment">BOOK APPOINTMENT</a>
                                </div>
                            </div>
                            `;
                        html +=  '</div>'+
                                  '</div>'; 
                    } else {
                        html = '<p>No items found in trial cart</p>';
                    }

                $('#cart-items-container').append(html); // Append the new product card to the container
                    // Process the response here, e.g., display the cart items
                },
                error: function(xhr, status, error) {
                    console.error('Error:', error);
                },complete: function() {
                    // Hide the loader regardless of success or error
                    $('#loader').css('display','');
                }
            });
        }
        setCart();
    });
</script>