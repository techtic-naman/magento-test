<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Acl/etc/acl.xsd">
    <acl>
        <resources>
            <resource id="Magento_Backend::admin">
                <resource id="Webkul_Walletsystem::walletsystem" title="Webkul Wallet System" sortOrder="10" >
                    <resource id="Webkul_Walletsystem::wallet" title="Customer Wallet Details" sortOrder="10">
                    </resource>
                    <resource id="Webkul_Walletsystem::banktransfer" title="Bank Transfer Details" sortOrder="11">
                    </resource>
                    <resource id="Webkul_Walletsystem::walletamount" title="Adjust Amount to Wallet" sortOrder="12">
                    </resource>
                    <resource id="Webkul_Walletsystem::walletcreditrules" title="Wallet System Credit Rules" sortOrder="13">
                    </resource>
                    <resource id="Webkul_Walletsystem::walletpayee" title="Wallet System Payee Details" sortOrder="14">
                    </resource>
                    <resource id="Webkul_Walletsystem::accountdetails" title="Customer Bank Account Details" sortOrder="15">
                    </resource>
                    <resource id="Webkul_Walletsystem::walletsystem_support" title="Support" sortOrder="20">
                    <resource id="Webkul_Walletsystem::walletsystem_userguide" title="User Guide" sortOrder="10" />
                    <resource id="Webkul_Walletsystem::walletsystem_extension" title="Store Extension" sortOrder="20" />
                    <resource id="Webkul_Walletsystem::walletsystem_uvdesk" title="Ticket/Customisations" sortOrder="30" />
                    <resource id="Webkul_Walletsystem::walletsystem_services" title="Services" sortOrder="40" />
                    <resource id="Webkul_Walletsystem::walletsystem_reviews" title="Reviews" sortOrder="50" />
                </resource>
                </resource>
               
                <resource id="Magento_Backend::stores">
                    <resource id="Magento_Backend::stores_settings">
                        <resource id="Magento_Config::config">
                            <resource id="Webkul_Walletsystem::config_walletsystem" title="Walletsystem Configuration section" sortOrder="50" />
                        </resource>
                    </resource>
                </resource>
            </resource>
        </resources>
    </acl>
</config>