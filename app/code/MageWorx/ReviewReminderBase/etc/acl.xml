<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Acl/etc/acl.xsd">
    <acl>
        <resources>
            <resource id="Magento_Backend::admin">
                <resource id="Magento_Backend::marketing">
                    <resource id="MageWorx_ReviewReminderBase::reviewreminderbase" title="Review Reminders" sortOrder="10">
                        <resource id="MageWorx_ReviewReminderBase::reviewreminderbase_reminder" title="Manage Reminders" sortOrder="10"/>
                        <resource id="MageWorx_ReviewReminderBase::reviewreminderbase_unsubscribed" title="Unsubscribed Clients" sortOrder="20"/>
                        <resource id="MageWorx_ReviewReminderBase::reviewreminderbase_logRecord" title="Logs" sortOrder="30"/>
                    </resource>
                </resource>
                <resource id="Magento_Backend::stores">
                    <resource id="Magento_Backend::stores_settings">
                        <resource id="Magento_Config::config">
                            <resource id="MageWorx_ReviewReminderBase::reviewreminderbase_config" title="Review Reminder"/>
                        </resource>
                    </resource>
                </resource>
            </resource>
        </resources>
    </acl>
</config>
