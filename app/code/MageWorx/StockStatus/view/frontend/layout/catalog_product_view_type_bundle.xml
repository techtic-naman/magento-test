<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="product.info.options.wrapper.bottom">
            <action method="unsetChild">
                <argument name="block" xsi:type="string">mageworx.stock_status.block.additional</argument>
            </action>
        </referenceBlock>
        <referenceBlock name="bundle.summary">
            <block class="MageWorx\StockStatus\Block\StockStatus"
                   name="mageworx.stock_status.block"
                   ifconfig="mageworx_marketing_suite/stock_status/enable"
                   after="-"
            />
        </referenceBlock>
    </body>
</page>