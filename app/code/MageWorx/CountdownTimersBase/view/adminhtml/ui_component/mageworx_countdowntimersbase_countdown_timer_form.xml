        <field name="products_assign_type" formElement="select" sortOrder="10">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">countdown_timer</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Assign Type</label>
                <dataScope>products_assign_type</dataScope>
                <switcherConfig>
                    <rules>
                        <rule name="0">
