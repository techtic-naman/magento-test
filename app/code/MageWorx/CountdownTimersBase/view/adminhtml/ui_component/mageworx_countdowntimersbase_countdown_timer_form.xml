                    <item name="default" xsi:type="number">1</item>
                </item>
            </argument>
            <settings>
                <dataType>boolean</dataType>
                <label translate="true">Display on Categories</label>
                <dataScope>display_on_categories</dataScope>
            </settings>
            <formElements>
                <checkbox>
                    <settings>
                        <valueMap>
                            <map name="false" xsi:type="number">0</map>
                            <map name="true" xsi:type="number">1</map>
                        </valueMap>
                        <prefer>toggle</prefer>
                    </settings>
                </checkbox>
            </formElements>
        </field>
        <field name="use_discount_dates" formElement="checkbox" sortOrder="60">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">countdown_timer</item>
                    <item name="default" xsi:type="number">0</item>
                </item>
            </argument>
            <settings>
                <dataType>boolean</dataType>
                <label translate="true">Use discount dates</label>
                <dataScope>use_discount_dates</dataScope>
                <switcherConfig>
                    <rules>
                        <rule name="0">
                            <value>0</value>
                            <actions>
                                <action name="0">
                                    <target>mageworx_countdowntimersbase_countdown_timer_form.areas.general.general.start_date</target>
                                    <callback>show</callback>
                                </action>
                                <action name="1">
                                    <target>mageworx_countdowntimersbase_countdown_timer_form.areas.general.general.end_date</target>
                                    <callback>show</callback>
                                </action>
                            </actions>
                        </rule>
                        <rule name="1">
                            <value>1</value>
                            <actions>
                                <action name="0">
                                    <target>mageworx_countdowntimersbase_countdown_timer_form.areas.general.general.start_date</target>
                                    <callback>hide</callback>
                                </action>
                                <action name="1">
                                    <target>mageworx_countdowntimersbase_countdown_timer_form.areas.general.general.end_date</target>
                                    <callback>hide</callback>
                                </action>
                            </actions>
                        </rule>
                    </rules>
                    <enabled>true</enabled>
                </switcherConfig>
            </settings>
            <formElements>
                <checkbox>
                    <settings>
                        <valueMap>
                            <map name="false" xsi:type="number">0</map>
                            <map name="true" xsi:type="number">1</map>
                        </valueMap>
                        <prefer>toggle</prefer>
                    </settings>
                </checkbox>
            </formElements>
        </field>
        <field name="start_date" formElement="date" sortOrder="70">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">countdown_timer</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Start</label>
                <dataScope>start_date</dataScope>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
            </settings>
        </field>
        <field name="end_date" formElement="date" sortOrder="80">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">countdown_timer</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">End</label>
                <dataScope>end_date</dataScope>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
            </settings>
        </field>
        <field name="priority" formElement="input" sortOrder="90">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">countdown_timer</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Priority</label>
                <dataScope>priority</dataScope>
                <validation>
                    <rule name="validate-digits" xsi:type="boolean">true</rule>
                    <rule name="validate-digits-range" xsi:type="string">0-65535</rule>
                </validation>
            </settings>
        </field>
    </fieldset>
    <fieldset name="products" sortOrder="20">
        <argument name="data" xsi:type="array">
            <item name="config" xsi:type="array">
                <item name="visibleValue" xsi:type="string">specific-products</item>
            </item>
        </argument>
        <settings>
            <label translate="true">Products</label>
            <dataScope>data</dataScope>
