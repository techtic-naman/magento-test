                                <action name="0">
                                    <target>mageworx_countdowntimersbase_countdown_timer_form.areas.products.products.specific-products</target>
                                    <callback>show</callback>
                                </action>
                                <action name="1">
                                    <target>mageworx_countdowntimersbase_countdown_timer_form.areas.products.products.conditions_wrapper</target>
                                    <callback>hide</callback>
                                </action>
                            </actions>
                        </rule>
                        <rule name="1">
                            <value>2</value>
                            <actions>
                                <action name="0">
                                    <target>mageworx_countdowntimersbase_countdown_timer_form.areas.products.products.specific-products</target>
                                    <callback>hide</callback>
                                </action>
                                <action name="1">
                                    <target>mageworx_countdowntimersbase_countdown_timer_form.areas.products.products.conditions_wrapper</target>
                                    <callback>show</callback>
                                </action>
                            </actions>
                        </rule>
                    </rules>
                    <enabled>true</enabled>
