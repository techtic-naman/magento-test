                                <action name="1">
                                    <target>mageworx_countdowntimersbase_countdown_timer_form.areas.general.general.priority</target>
                                    <callback>show</callback>
                                </action>
                                <action name="2">
                                    <target>mageworx_countdowntimersbase_countdown_timer_form.areas.general.general.use_discount_dates</target>
                                    <callback>enable</callback>
                                </action>
                                <action name="3">
                                    <target>mageworx_countdowntimersbase_countdown_timer_form.areas.general.general.display_on_categories</target>
                                    <callback>show</callback>
                                </action>
                            </actions>
                        </rule>
                        <rule name="1">
                            <value>specific-products</value>
                            <actions>
                                <action name="0">
                                    <target>mageworx_countdowntimersbase_countdown_timer_form.areas.general.general.display_mode</target>
                                    <callback>changeVisibilityOfDependentTabs</callback>
                                    <params>
                                        <param name="0" xsi:type="string">specific-products</param>
                                    </params>
                                </action>
                                <action name="1">
                                    <target>mageworx_countdowntimersbase_countdown_timer_form.areas.general.general.priority</target>
                                    <callback>show</callback>
                                </action>
                                <action name="2">
                                    <target>mageworx_countdowntimersbase_countdown_timer_form.areas.general.general.use_discount_dates</target>
                                    <callback>enable</callback>
                                </action>
                                <action name="3">
                                    <target>mageworx_countdowntimersbase_countdown_timer_form.areas.general.general.display_on_categories</target>
                                    <callback>show</callback>
                                </action>
                            </actions>
                        </rule>
                        <rule name="2">
                            <value>custom</value>
                            <actions>
                                <action name="0">
                                    <target>mageworx_countdowntimersbase_countdown_timer_form.areas.general.general.display_mode</target>
                                    <callback>changeVisibilityOfDependentTabs</callback>
                                    <params>
                                        <param name="0" xsi:type="string">custom</param>
                                    </params>
                                </action>
                                <action name="1">
                                    <target>mageworx_countdowntimersbase_countdown_timer_form.areas.general.general.priority</target>
                                    <callback>hide</callback>
                                </action>
                                <action name="2">
                                    <target>mageworx_countdowntimersbase_countdown_timer_form.areas.general.general.use_discount_dates</target>
                                    <callback>disable</callback>
                                </action>
                                <action name="3">
                                    <target>mageworx_countdowntimersbase_countdown_timer_form.areas.general.general.use_discount_dates</target>
                                    <callback>value</callback>
                                    <params>
                                        <param name="0" xsi:type="number">0</param>
                                    </params>
                                </action>
                                <action name="4">
                                    <target>mageworx_countdowntimersbase_countdown_timer_form.areas.general.general.display_on_categories</target>
                                    <callback>hide</callback>
                                </action>
                            </actions>
                        </rule>
                    </rules>
                    <enabled>true</enabled>
                </switcherConfig>
            </settings>
            <formElements>
                <select>
                    <settings>
                        <options class="MageWorx\CountdownTimersBase\Model\Source\CountdownTimer\DisplayMode"/>
                    </settings>
                </select>
            </formElements>
        </field>
        <field name="display_on_categories" formElement="checkbox" sortOrder="55">
